script type="text/template" id="idea_template"
  |{{#attributes}}
  |{{#category}}
  .idea class="{{css_class}}"
    |{{/category}}
    .idea_wrapper
      h1
        a href='{{url}}'
          |{{#category}}
          img class="category" src="{{badge}}" title="{{name}}"
          |{{/category}}
          |{{title}}
      |{{#user}}
      .user= t('.by', :user => "{{name}}")
      |{{/user}}
      .headline
        p {{headline}}
      .link= link_to t('.link'), '{{url}}'
    .footer
      ul
        li title=t('likes', :count => '{{likes}}')
          = image_tag 'icons/like.png'
          |{{likes}}
        li title=t('versions', :count => '{{versions_count}}')
          = image_tag 'icons/ramify.png'
          |{{versions_count}}
  |{{/attributes}}
